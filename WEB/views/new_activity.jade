extends dashboard
link(rel='stylesheet', href='/stylesheets/dashboard.css')

block form
	.content
		h1.title Add new Activity
		.form-event(id='activity')
			form
				.first
					h4.tags Nombre de la actividad
					input.user(id='name-id' type='text' name='name' placeholder='Nombre...' onfocus="this.placeholder = ''" onblur="this.placeholder = 'Nombre...'")
					h4.tags Descripcion
					input.description(id='description-id' type='textarea' name='despription' onfocus="this.placeholder = ''" onblur="this.placeholder = 'Descripcion'")
					h4.tags-rigth ¿En que sala se realiza la actividad?
					select(style='position:relative !important')
						option Elige una sala
						option Escenario Tierra
					h4.tags ¿Cuando comienza la actividad?
					input.date(id='initial-id' style='position:relative !important' type='date' name='event-date')
					h4.tags ¿Cuando finaliza la actividad?
					input.date(id='finish-id' style='position:relative !important' type='date' name='event-date')
					h4.tags ¿Quieres añadir una foto a tu actividad?
					input.file(id='image-id' type='file' class='upload' name='image')
					button.send-data(id='send-activity-button' type='submit' name='action') 
						i.fa.fa-send.fa-1x &nbsp; Crear